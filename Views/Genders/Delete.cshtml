@model MertCanErdemBeltekSinav.Models.Genders

@{
    ViewData["Title"] = "Cinsiyeti Sil";
}

<h1>Cinsiyeti Sil</h1>

<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Cinsiyet: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenderName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye geri dön</a>
    </form>
</div>
