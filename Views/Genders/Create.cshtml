@model MertCanErdemBeltekSinav.Models.Genders

@{
    ViewData["Title"] = "Cinsiyet Oluştur";
}

<h1>Cinsiyet Oluştur</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenderName" class="control-label">Cinsiyet: </label>
                <input asp-for="GenderName" class="form-control" />
                <span asp-validation-for="GenderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
