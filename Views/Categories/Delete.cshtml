@model MertCanErdemBeltekSinav.Models.Categories

<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kategoriler</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kategori Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye geri dön</a>
    </form>
</div>